{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:iso": "cd packages/react-scripts-iso && node bin/react-scripts-iso.js build",
    "build:spa": "cd packages/react-scripts-spa && node bin/react-scripts-spa.js build",
    "changelog": "lerna-changelog",
    "compile:lockfile": "node tasks/compile-lockfile.js",
    "format": "prettier --trailing-comma es5 --single-quote --write '**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "publish": "tasks/publish.sh",
    "react-starter": "node tasks/rs.js",
    "reset": "sh tasks/reset-dev-env.sh",
    "start:iso": "cd packages/react-scripts-iso && node bin/react-scripts-iso.js start",
    "start:spa": "cd packages/react-scripts-spa && node bin/react-scripts-spa.js start",
    "test:iso": "cd packages/react-scripts-iso && node bin/react-scripts-iso.js test",
    "test:spa": "cd packages/react-scripts-spa && node bin/react-scripts-spa.js test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "fs-extra": "^8.1.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.18.1",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2"
  }
}
